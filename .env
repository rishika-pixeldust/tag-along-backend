# =============================================================================
# Tag Along Backend — Local Development Environment
# =============================================================================
SECRET_KEY=dev-insecure-key-only-for-local-development-change-in-production
DEBUG=True
DJANGO_ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS — allow all in development
CORS_ALLOW_ALL_ORIGINS=True

# Database — uses SQLite by default in development (no PostgreSQL needed)
# DATABASE_URL=postgres://tagalong:password@localhost:5432/tagalong

# Redis / Celery — leave empty to skip (optional in development)
REDIS_URL=
CELERY_BROKER_URL=

# Firebase — set path to your firebase-credentials.json if using Firebase features
FIREBASE_CREDENTIALS_PATH=

# API keys — fill in when needed
ANTHROPIC_API_KEY=
EXCHANGE_RATE_API_KEY=
